@model IEnumerable<Core.Entites.Models.TaskType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MetroUILayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreatedByUser.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedBy.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsArchieved)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedByUser.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedBy.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdatedOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsArchieved)
        </td>
        <td class="center">
            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning">
                Edit
                <i class="fa fa-edit "></i>
            </a>
            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info">
                Details
                <i class="fa fa-search-plus "></i>
            </a>
            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">
                Delete
                <i class="fa fa-trash-o"></i>
            </a>
        </td>
    </tr>
}

</table>
